page{
    position: relative;
    height: 100%;
}
.container {
    background-color: #f1f1f1;
    position: absolute;
    height: 100%;
    box-sizing: border-box;
}
.drug-header {
    background-color: #fff;
    padding: 30rpx;
    font-size: 14px;
    line-height: 1.8;
    position: relative;
    margin-bottom: 20rpx;
    min-height: 140rpx;
}
.header-left {
    vertical-align: middle;
}
.name {
    font-size: 16px;
    color: #1B91E0;
}
.good_name, .factory {
    width: 560rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.good_name {
    color: #323232;
}
.factory {
    font-size: 13px;
    color: #999;
}
.price-wrap {
    font-size: 13px;
    color: #999;
    position: absolute;
    top: 30rpx;
    right: 40rpx;
    text-align: right;
}
.price {
    color: #1B91E0;
    font-size: 17px;
    display: block;
}
.price-title {
    display: inline-block;
    background: url("https://media2.chunyuyisheng.com/@/media/images/2017/10/17/e98b/973baba84e6d_w17_h21_.png") no-repeat left center;
    background-size: 22rpx 28rpx;
    padding-left: 30rpx;
}
.color-blue {
    position: absolute;
    right: 40rpx;
    bottom: 30rpx;
    font-size: 12px;
    color: #1B91E0;
}
.show-wrap {
    position: relative;
    background-color: #fff;
    padding-bottom: 30rpx;
}
.show-btn {
    display: block;
    text-align: center;
    width: 90%;
    background-color: #E6F5FF;
    margin: 0 auto;
    padding: 20rpx 0;
    color: #1B91E0;
    font-size: 12px;
}
.down-tag,.up-tag {
    width: 16rpx;
    height: 16rpx;
    position: absolute;
    top: 32rpx;
}
.down-tag {
    background: url("https://media2.chunyuyisheng.com/@/media/images/2017/10/17/e90f/f42487309523_w12_h12_.png") no-repeat;
    background-size: 100% 100%;
}
.up-tag {
    background: url("https://media2.chunyuyisheng.com/@/media/images/2017/10/17/d03a/c09b266139af_w12_h12_.png") no-repeat;
    background-size: 100% 100%;
}
.comments-button {
    display: table;
    width: 120rpx;
    height: 120rpx;
    background: rgba(0,0,0,0.7);
    color: #fff;
    border-radius: 50%;
    font-size: 13px;
    text-align: center;
}
.comments-info {
    vertical-align: middle;
    display: table-cell;
}
.button-wrap {
    position: fixed;
    right: 0;
    bottom: 90rpx;
}
.view-comments {
    position: relative;
    z-index: 1;
    right: 20rpx;
}
.comments-num {
    position: absolute;
    left: 86rpx;
    min-width: 28rpx;
    height: 28rpx;
    line-height: 28rpx;
    font-size: 12px;
    background-color: #ff5267;
    z-index: 2;
    color: #fff;
    text-align: center;
    border-radius: 40rpx;
    padding: 4rpx;
    font-family: PingFangSC-Medium;
}
.comments-wrap {
    margin-top: 20rpx;
    line-height: 1.5;
    background-color: #fff;
}
.comment-item {
    margin-bottom: 0 !important;
    border-bottom: 1px solid #e7e7e7;
    line-height: 1.8;
}
.title {
    font-size: 14px;
    padding: 30rpx 70rpx;
    border-bottom: 1px solid #e7e7e7;
    position: relative;
}
.hot-tag {
    width: 22rpx;
    height: 28rpx;
    background: url("https://media2.chunyuyisheng.com/@/media/images/2017/10/17/36c1/cffa7c8f521f_w22_h28_.png") no-repeat;
    background-size: 100% 100%;
    position: absolute;
    top: 36rpx;
    left: 30rpx;
}
.all-tag {
    width: 30rpx;
    height: 26rpx;
    background: url("https://media2.chunyuyisheng.com/@/media/images/2017/10/17/25f3/3dce785cff62_w23_h20_.png") no-repeat;
    background-size: 100% 100%;
    position: absolute;
    top: 38rpx;
    left: 28rpx;
}

/*drugitem*/
.no-limit {
    height: auto;
    line-height: 2;
}
.drug-item {
    background-color: #fff;
    padding: 30rpx;
    line-height: 2;
}
.drug-title {
    font-size: 14px;
    color: #323232;
    margin-bottom: 12rpx;
    font-weight: bold;
}
.limit {
    height: 540rpx;
    overflow: hidden;
    line-height: 2;
}
.content {
    font-size: 15px;
    color: #666;
    margin-bottom: 30rpx;
    white-space: pre-wrap;
}
.toggle-all {
    background: #f5f5f5;
    width: 100%;
    margin: 20rpx auto;
    text-align: center;
    font-size: 12px;
    color: #999;
    padding: 10rpx 0;
    cursor: pointer;
    position: relative;
    -webkit-tap-highlight-color:transparent;
}
.toggle {
    width: 16rpx;
    height: 16rpx;
    background: url("https://media2.chunyuyisheng.com/@/media/images/2017/10/17/c5dc/62143cd5fe08_w12_h12_.png") no-repeat;
    background-size: 100% 100%;
    position: absolute;
    top: 26rpx;
    margin-left: 10rpx;
}
.expand {
    width: 16rpx;
    height: 16rpx;
    background: url("https://media2.chunyuyisheng.com/@/media/images/2017/10/17/5e09/5bc5dfc0e406_w12_h12_.png") no-repeat;
    background-size: 100% 100%;
    position: absolute;
    top: 26rpx;
    margin-left: 10rpx;
}
.hide-item {
    display: none;
}
/*comment*/
.comment-item {
    padding: 30rpx;
    margin-bottom: 20rpx;
    background: #fff;
    font-family: PingFangSC-light;
}
.doctor-detail {
    display: inline-block;
    font-size: 13px;
    color: #999;
    margin-bottom: 10rpx;
}
.comment-detail {
    font-size: 15px;
    color: #323232;
    margin-bottom: 36rpx;
}
.quote-comment {
    background: #F6F8F9;
    border-radius: 4rpx;
    padding: 30rpx;
    margin: 20rpx 0;
}
.quote-comment .name {
    font-size: 13px;
    color: #888;
}
.quote-comment .content {
    font-size: 14px;
    color: #323232;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
}

/*点赞*/
.fl {
    float: left;
}
.fr {
    float: right;
}
.drug {
    display: inline-block;
    padding: 6rpx 20rpx;
    color: #1B91E0;
    background: #E6F5FF;
    font-size: 12px;
    border-radius: 22rpx;
}
.icon-btn{
    display: inline-block;
    padding-left: 40rpx;
    color: #999;
    font-size: 13px;
    height: 36rpx;
    line-height: 36rpx;
}
.upvote-btn {
    min-width: 80rpx;
    background: url("https://media2.chunyuyisheng.com/@/media/images/2017/10/16/24d4/892be3c9821d_w24_h24_.png") no-repeat left center;
    background-size: 30rpx 30rpx;
    position: relative;
}
.num {
    display: block;
    font-size: 12px;
    position: absolute;
    border-radius: 36rpx;
    background-color: #E6F5FF;
    min-width: 36rpx;
    height: 36rpx;
    line-height: 36rpx;
    color: #1B91E0;
    text-align: center;
    top: -26rpx;
    left: 16rpx;
}
.upvote-btn.active {
    background: url("https://media2.chunyuyisheng.com/@/media/images/2017/10/16/1300/10f9fd2edb4c_w21_h23_.png") no-repeat left center;
    background-size: 30rpx 30rpx;
}
.reply-btn {
    background: url("https://media2.chunyuyisheng.com/@/media/images/2017/10/16/898c/57121abb864b_w24_h24_.png") no-repeat left center;
    background-size: 30rpx 30rpx;
}