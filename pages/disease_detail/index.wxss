.drug-search {
    font-size: 14px;
    padding: 0 30rpx;
}
.logo {
    padding-bottom: 40rpx;
    text-align: center;
    font-size: 25px;
    color: #646466;
    font-weight: normal;
}
.drug-logo {
    width: 100rpx;
    height: 100rpx;
    vertical-align: middle;
    margin-right: 48rpx;
}
.search-contaier-fake {
    position: relative;
    margin-top: 24rpx;
    padding: 12rpx 30rpx 12rpx 30rpx;
    color: #A6A6A6;
    background: #f1f1f1;
    border-radius: 40rpx;
}
.search-text {
    font-size: 14px;
}
.search-icon{
    vertical-align: middle;
    margin-right: 20rpx;
}
.search-top {
    background-color: #fff;
    padding: 44rpx 30rpx 26rpx;
    margin-bottom: 12rpx;
    box-sizing: border-box;
}
.search-contaier {
    position: relative;
    overflow: hidden;
    border-radius: 8rpx;
    padding: 24rpx 30rpx;
    background: #F4F4F4;
}
.input-wrap{
    position: relative;
    display: block;
    background: #fff;
    font-size: 14px;
    box-sizing: border-box;
    padding: 0 60rpx;
    margin-right: 80rpx;
    border-radius: 8rpx;
}
.search-btn{
   position: absolute;
   top: 50%;
   left: 16rpx;
   transform: translate(0,-16rpx)
}
.delete-btn {
    position: absolute;
    top: 50%;
    right: 16rpx;
    transform: translate(0,-16rpx)
}
.cancel-btn {
    position: absolute;
    right: 0;
    top: 0;
    display: inline-block;
    font-size: 16px;
    color: #1C91E0;
    padding: 0 20rpx;
    height: 104rpx;
    line-height: 104rpx;
}
.search-type {
    margin-top: 42rpx;
    text-align: center;
}
.search-associate {
    width: 100%;
    background-color: #fff;
    z-index: 1;
}
.drug-type {
    position: relative;
    display: inline-block;
    padding-top: 100rpx;
    width: 33%;
    color: #666;
    text-align: center;
    float: left;
    font-size: 15px;
}
.drug-type.classify {
    background: url("https://media2.chunyuyisheng.com/@/media/images/2017/10/13/4837/c3543db12b53_w60_h60_.png") no-repeat top center;
    background-size: 80rpx 80rpx;
    margin-left: -20rpx;
}
.drug-type.disease {
    background: url("https://media2.chunyuyisheng.com/@/media/images/2017/10/13/c453/6c1e6d440bc8_w60_h60_.png") no-repeat top center;
    background-size: 80rpx 80rpx;
    margin-left: 14rpx;
}
.drug-type.calculate {
    background: url("https://media2.chunyuyisheng.com/@/media/images/2017/10/13/29a5/1dd52a0198f5_w60_h60_.png") no-repeat top center;
    background-size: 80rpx 80rpx;
    margin-left: 12rpx;
}
.drug-type.comment {
    background: url("https://media2.chunyuyisheng.com/@/media/images/2017/10/13/8e82/6f73266824e7_w60_h60_.png") no-repeat top center;
    background-size: 80rpx 80rpx;
    margin-left: 14rpx;
    margin-right: -20rpx;
}
.drug-type.hot:after {
    content: '热';
    display: inline-block;
    width: 44rpx;
    height: 44rpx;
    line-height: 44rpx;
    text-align: center;
    font-size: 12px;
    border-radius: 100%;
    color: #fff;
    background-color: #fd546a;
    position: absolute;
    right: 50%;
    margin-right: -58rpx;
    top: -12rpx;
    transform: scale( .7, .7);
}
.history-title {
    position: relative;
    font-weight: normal;
    height: 60rpx;
    line-height: 60rpx;
    color: #999;
    margin: 20rpx 0;
}
.clear-btn {
    float: right;
    height: 60rpx;
    width: 60rpx;
    background: url("https://media2.chunyuyisheng.com/@/media/images/2017/10/16/1956/6d0227d53aeb_w21_h21_.png") no-repeat center right;
    background-size: 32rpx 32rpx;
}
.search-history {
    position: relative;
    text-align: left;
    overflow: hidden;
    padding: 0 30rpx 34rpx;
    border-bottom: 1px solid #e7e7e7;
    font-size: 14px;
}
.search-history-list {
    float: left;
    color: #666;
    margin: 10rpx 4rpx;
    padding: 8rpx 12rpx;
    background-color: #f4f4f4;
    border-radius: 4rpx;
}
.search-associate-tip {
    /* @include associate-tip; */
    border-top: 0;
}

/***/
.search-middle {
    background-color: #fff;
    margin-bottom: 12rpx;
    padding: 30rpx 0 0 30rpx;
    box-sizing: border-box;
}
.title {
    margin-bottom: 26rpx;
    position: relative;
    font-size: 14px;
    color: #323232;
}
.recent-update-more {
    display: inline-block;
    position: absolute;
    right: 30rpx;
    padding-right: 20rpx;
    color: #999;
    font-size: 13px;
    background: url("https://media2.chunyuyisheng.com/@/media/images/2017/10/13/0a6d/cb50e70ca9d0_w11_h20_.png") no-repeat center right;
    background-size: 10rpx 20rpx;
}
.search-bottom {
    padding: 30rpx;
    box-sizing: border-box;
    width: 100%;
}
.recent-update-item {
    float: left;
    width: 30%;
    margin-right: 3%;
    border-radius: 2px;
    padding: 20rpx;
    box-sizing: border-box;
    height: 120rpx;
    background: #B8E3FF;
    line-height: 1.5;
    font-size: 12px;
    margin-bottom: 30rpx;
}
.recent-update-name,
.good-name {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.recent-update-name {
    color: #1B91E0;
}
.good-name {
    color: #4A4A4A;
    margin-top: 12rpx;
}
.hot-comment {
    line-height: 1.5;
    -webkit-tap-highlight-color: rgba(0,0,0,0);
}
.doctor-info {
    position: relative;
    padding: 26rpx 10rpx;
    border-bottom: 1px solid #e7e7e7;
}
.doctor-right {
    margin:0 0 34rpx 156rpx ;
}
.doctor-left {
    float: left;
    position: relative;
}
.doctor-img {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    border: 1px solid #f6cb5a;
}
.doctor_0, .doctor_1, .doctor_2 {
    width: 74rpx;
    height: 36rpx;
    position: absolute;
    bottom: 0;
    left: 26rpx;
}
.doctor_0 {
    background: url("https://media2.chunyuyisheng.com/@/media/images/2017/10/13/1557/962a90291063_w74_h36_.png") no-repeat bottom;
    background-size: 100% 100%;
    z-index: 1;
}
.doctor_1 {
    background: url("https://media2.chunyuyisheng.com/@/media/images/2017/10/13/c323/d4849f1b77f6_w74_h36_.png") no-repeat bottom;
    background-size: 100% 100%;
}
.doctor_2 {
    background: url("https://media2.chunyuyisheng.com/@/media/images/2017/10/13/2246/2ef55868fc37_w72_h36_.png") no-repeat bottom;
    background-size: 100% 100%;
}
.border_0 {
    border: 1px solid #f6cb5a;
}
.border_1 {
    border: 1px solid #d6d8d7;
}
.border_2 {
    border: 1px solid #e57642;
}
.doctor-name {
    display: inline-block;
    max-width: 300rpx;
    text-overflow:ellipsis;
    white-space:nowrap;
    overflow: hidden;
}
.name {
    font-size: 13px;
    color: #999;
    margin-bottom: 10rpx;
    position: relative;
}
.drug {
    position: absolute;
    right: 0;
}
.comment-detail {
    font-size: 15px;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
/*搜索列表*/
.text-list {
    position: relative;
    display: block;
    padding: 26rpx 30rpx;
    color: #323232;
    border-bottom: 1px solid #e7e7e7;
    font-size: 14px;
}
.arrow {
    position: absolute;
    right: 16rpx;
    top: 50%;
    margin-top: -10rpx;
    width: 50rpx;
    height: 50rpx;
    background: url("https://media2.chunyuyisheng.com/@/media/images/2017/10/16/4d44/f9b86d9ca41f_w20_h20_.png") no-repeat center;
    background-size: 20rpx auto;
    cursor: pointer;
}
.mfrs-name {
    color: #999;
    font-size: 13px;
    margin-right: 40rpx;
}
.s-hl {
    color: #1C91E0;
}
/*点赞*/
.fl {
    float: left;
}
.fr {
    float: right;
}
.icon-btn{
    display: inline-block;
    padding-left: 40rpx;
    color: #999;
    font-size: 13px;
    height: 36rpx;
    line-height: 36rpx;
}
.upvote-btn {
    min-width: 80rpx;
    background: url("https://media2.chunyuyisheng.com/@/media/images/2017/10/16/24d4/892be3c9821d_w24_h24_.png") no-repeat left center;
    background-size: 30rpx 30rpx;
    position: relative;
}
.num {
    display: block;
    font-size: 12px;
    position: absolute;
    border-radius: 36rpx;
    background-color: #E6F5FF;
    min-width: 36rpx;
    height: 36rpx;
    line-height: 36rpx;
    color: #1B91E0;
    text-align: center;
    top: -26rpx;
    left: 16rpx;
}
.upvote-btn.active {
    background: url("https://media2.chunyuyisheng.com/@/media/images/2017/10/16/1300/10f9fd2edb4c_w21_h23_.png") no-repeat left center;
    background-size: 30rpx 30rpx;
}
.reply-btn {
    background: url("https://media2.chunyuyisheng.com/@/media/images/2017/10/16/898c/57121abb864b_w24_h24_.png") no-repeat left center;
    background-size: 30rpx 30rpx;
}