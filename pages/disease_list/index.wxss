.disease-list {
	padding-top: 30rpx;
	border-bottom: 1px solid #e7e7e7;
	line-height: 1.8;
	cursor: pointer;
	-webkit-tap-highlight-color: transparent;
	position: relative;
}
.name {
    color: #323232;
    font-size: 15px;
    padding-left: 30rpx;
}
.desc {
    font-size: 13px;
    color: #999;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    padding:0 0 30rpx 30rpx;
    width: 620rpx;
}
.down {
    width: 26rpx;
    height: 14rpx;
    background: url("http://media2.chunyuyisheng.com/@/media/images/2017/10/17/b321/752e1c1b9f7d_w28_h16_.png") no-repeat;
    background-size: 100% 100%;
    position: absolute;
    top: 70rpx;
    right: 30rpx;
}
.up {
    width: 26rpx;
    height: 14rpx;
    background: url("https://media2.chunyuyisheng.com/@/media/images/2017/10/17/db33/b80a36c10f48_w28_h16_.png") no-repeat;
    background-size: 100% 100%;
    position: absolute;
    top: 70rpx;
    right: 30rpx;
}
.sub-disease-list {
	padding: 20rpx 50rpx;
	background-color: #fafafa;
	font-size: 14px;
	border-top: 1px solid #e7e7e7;
	color: #888;
}
.disease-link {
    display: block;
    padding: 20rpx 0;
    position: relative;
}
.disease-link:last-of-type {
    margin-bottom: 0;
}
.right-tag {
    width: 12rpx;
    height: 22rpx;
    background: url("https://media2.chunyuyisheng.com/@/media/images/2017/10/17/1728/28e01f88ef55_w11_h20_.png") no-repeat;
    background-size: 100% 100%;
    position: absolute;
    top: 30rpx;
    right: 10rpx;
}