<view class="list-wrap">
    <view class="recent-list" wx:for="{{recentList}}">
        <view class="top">
            <view class="name">
                {{item.drug_info.name}}({{item.drug_info.good_name}})
            </view>
            <view class="factory">{{item.drug_info.company_name}}</view>
        </view>
        <view class="bottom" wx:if="{{item.content}}">
            <view class="recent">[更新内容]</view>
            <view class="content">{{item.content}}</view>
        </view>
    </view>
</view>
